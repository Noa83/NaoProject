{% extends 'base.html.twig' %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block navi5 %}
    <li class="dropdown active">
{% endblock %}

{% block body %}
    <div class="container-fluid" id="login_bg">
        {% if error %}
            <div class="alert alert-danger">Erreur de connexion v√©rifiez vos identifiants. ({{ error.message }})</div>
        {% endif %}
        <div class="col-md-6 col-md-offset-3 contenulogin" id="opal_bg">
            <div class="test">
                <h1 class="sous-titre">Se connecter :</h1>
                <form class="form-login" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <label for="username">Login : </label><br/>
                            <input type="text" class="form-control" id="username" name="_username" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <label for="password">Mot de passe :</label>
                            <input type="password" class="form-control" id="password" name="_password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <input type="hidden" name="_target_path" value="account" />
                            <br />
                            <button class="btn btn-form" type="submit" value="Connexion" > Connexion </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}