{% extends 'base.html.twig' %}
{% block title %}Se Connecter{% endblock %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block navi5 %}
<li class="dropdown active">
    {% endblock %}

    {% block body %}
    <div class="container-fluid" id="login_bg">
        {% if error %}
            <div class="alert alert-danger">Erreur de connexion vérifiez vos identifiants.</div>
        {% endif %}
        <div class="col-md-6 col-md-offset-6 col-xs-10 col-xs-offset-1 contenulogin" id="opal_bg">
            <div class="test">
                <h1 class="sous-titre">Se connecter :</h1>
                <p class="text-center">Connectez-vous pour compléter votre profil et saisir vos
                    observations.</p>
                <p class="text-center">Pas encore inscrit ? Cliquez <a
                            href="{{ path('create_account') }}">ici</a>.
                </p>
                <form class="form-login" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <label for="username">Login : </label><br/>
                            <input type="text" class="form-control" id="username" name="_username"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                            <label for="password">Mot de passe :</label>
                            <input type="password" class="form-control" id="password" name="_password"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <br/>
                            <button class="btn btn_form-orange" type="submit" value="Connexion"> Connexion</button>
                            <p><a href="{{ path('ask_reset_password') }}">Mot de passe oublié ?</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}