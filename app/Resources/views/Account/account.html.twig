{% extends 'base.html.twig' %}
{% block title %}Mon Compte{% endblock %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/account.css') }}">
{% endblock %}

{% block navi5 %}
    <li class="dropdown active">
{% endblock %}

{% block body %}

    <div class="container-fluid" id="account">
        <h1 class="text-center">Mon compte</h1><br/>
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <div class="col-md-12">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <ul class="nav nav-tabs nav-justified">
                    <li><a href="{{ path('account') }}">Profil</a></li>
                    <li><a href="{{ path('account_observation') }}">Mes observations</a></li>
                    {% if is_granted('ROLE_VALIDATEUR') %}
                        <li><a href="{{ path('account_validation') }}">Gestion des validations</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>

        {% block accountContent %}
        {% endblock %}

    </div>

    <div class="container-fluid">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            {% for type, flash_messages in app.session.flashBag.all %}
                {% for flash_message in flash_messages %}
                    <div class="flash-{{ type }}">
                        {{ flash_message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.0/locales/bootstrap-datepicker.fr.min.js"></script>
    <script src="{{ asset('js/account.js') }}"></script>

{% endblock %}