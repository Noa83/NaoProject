{% extends 'base.html.twig' %}
{% block title %}Edition d'article{% endblock %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/ecriture_article.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminDashboard.css') }}">
{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                    <h1 class="text-center" id="rapport_titre">Modification d'article</h1>
            <div>
        </div>
        <br>

        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="well">
                    <div class="form-group">
                        <label for="nom">Titre</label>
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}})}}
                        {{ form_errors(form.title) }}
                    </div>


                    <div class="form-group">
                        <label for="category">Categorie</label>
                        {{ form_widget(form.category)}}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="form-group">
                        <label for="picture">Image</label>
                        {{ form_widget(form.imageUrl)}}
                        {{ form_errors(form.imageUrl)}}
                    </div>

                    <div class="form-group">
                        <label for="contenu">Contenu</label>
                        {{ form_widget(form.text, {'attr': {'required': 'false'}})}}
                        {{ form_errors(form.text)}}
                    </div>
                    <a href="{{ path('admin_article') }}" class="btn btn-danger pull-right">Annuler</a>
                    <button type="submit" name="submitAction"  value="Publier"  class="btn btn-info">Publier</button>
                    <button type="submit" name="submitAction"  value="Depublier"  class="btn btn-info">DÃ©publier</button>
                    <button type="submit" name="submitAction"  value="Enregistrer" class="btn btn-warning">Enregistrer</button>
                </div>

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block JS %}
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=4x89e2i2luo5lc7dp83cia8e8axdvsxsnfhfr4pqxxr1ev6g"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            height: 500,
            menubar: false,
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table contextmenu paste code'
            ],
            toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
            content_css: '//www.tinymce.com/css/codepen.min.css'
        });
    </script>
    <script>
        $(function(){
            $('#appbundle_article_text').removeAttr("required");
            $('.control-label').hide();
        });
    </script>
{% endblock %}