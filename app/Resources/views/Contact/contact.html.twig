{% extends 'base.html.twig' %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}

    <div class="container-fluid" id="contact_bg">

        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-3 col-lg-offset-5">
                    <h1 class="contact">CONTACTEZ NOUS</h1>
                    <h2 class="contact">Pour plus d'informations.</h2>
                </div>
            </div>
        </div>
        <br>

        <div class="row">

            <div class="col-lg-3 col-lg-offset-1">
                <legend>Adresse</legend>
                <p class="contact">9 Place Léon Betoulle, 87000 Limoges</p>
                <p class="contact">Tel:05 55 45 60 00</p>
                <hr>
                <legend>Maps</legend>
                <div class="well contact" id="maps"></div>
            </div>

            <div class="col-lg-8">

                <div class="col-lg-8 col-lg-offset-3">
                    <form action="#">
                        <legend>Envoyez-nous un message</legend>
                        <div class="well contact">
                            <div class="form-group">
                                <label for="nom">Nom:</label>
                                <input type="text" placeholder="Nom" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="prenom">Prénom:</label>
                                <input type="text" placeholder="Prénom" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="message">Votre message:</label>
                                <textarea name="message"  cols="30" rows="10" class="form-control"></textarea>
                            </div>
                            <button class="btn btn-default pull-right" id="btn-form-orange">Envoyer</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
{% endblock %}

{% block JS %}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAR8e4bssWdv_3Om7ArT7GGGmLQg2Ylg2A"></script>
    <script src="{{ asset('js/maps.js')}}"></script>
    <script src="{{ asset('js/observation.js')}}"></script>
{% endblock %}