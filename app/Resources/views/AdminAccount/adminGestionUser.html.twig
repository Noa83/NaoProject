{% extends 'AdminAccount/adminDashboard.html.twig' %}

{% block adminContent %}

    <div class="tab-content col-md-10 col-md-offset-1">
        <h3 class="text-center">Gestion des utilisateurs</h3>

        <div class="col-md-8 col-md-offset-2">
            <div class="text-center col-md-6 col-md-offset-3">
                <form action="{{ path('admin_user') }}" method="get">
                    <div class="form-group">
                        <label>Pseudo :</label>
                        <input type="text" title="Pseudo :" class="form-control" id="user_search" name="username" required><br/>
                        <button type="submit" class="btn join">Rechercher</button>
                    </div>
                </form>
            </div>
            <div class="text-center col-md-6 col-md-offset-3">
                {% if formEditUser %}
                    {{ form_start(formEditUser) }}
                    <div class="form-group">
                        <label>Pseudo :</label>
                        <div>{{ form_widget(formEditUser.username) }}</div>
                    </div>
                    <div class="form-group">
                        <label>Prenom :</label>
                        <div>{{ form_widget(formEditUser.prenom) }}</div>
                    </div>
                    <div class="form-group">
                        <label>Date de naissance :</label>
                        <div>{{ form_widget(formEditUser.dateNaissance) }}</div>
                    </div>
                    <div class="form-group">
                        <label>Email :</label>
                        <div>{{ form_widget(formEditUser.email) }}</div>
                    </div>
                    <div class="form-group">
                        <label>Ville :</label>
                        <div>{{ form_widget(formEditUser.ville) }}</div>
                    </div>
                    <div class="form-group">
                        <label>Role :</label>
                        <div>{{ form_widget(formEditUser.role) }}</div>
                    </div>
                    <div class="form-group">
                        <div>
                            {% if user is not null and user.id is not empty %}
                                <a href="{{ path('user_remove',{'id': user.id}) }}">Supprimer</a>
                            {% endif %}
                        </div>
                    </div>
                    {% else %}
                        Aucune donn√©e.
                    {% endif %}
                    <button class="btn join" type="submit">Sauvegarder</button>
                {{ form_end(formEditUser) }}
            </div>
        </div>
    </div>

{% endblock %}