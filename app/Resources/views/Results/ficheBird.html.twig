{% extends 'base.html.twig' %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/consultation.css') }}">
{% endblock %}

{% block navi3 %}
    <li class="active"><a href="{{ path('results') }}">Consultation<span class="sr-only">(current)</span></a></li>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="consultation_bg">
        <br>
        <div class="col-md-12">
            <div>
                <h1 class="text-center">Consulter les données</h1>
                <div class="col-sm-6">
                    <div class="col-sm-12" id="bg_infos_consult">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <h3 class="text-center">Fiche Espèce :</h3><br/>
                                {% if birdChoisi is not empty %}
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Regne de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.regne }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Phylum de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.phylum }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Classe de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.classe }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Ordre de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.ordre }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Famille de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.famille }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Nom Complet de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.nomComplet }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Nom Valide de l'oiseau :</p>
                                        <p class="col-xs-7"> {{ birdChoisi.nomValide }}</p>
                                    </div>
                                    {% if birdChoisi.nomVern is not empty %}
                                        <div class="englob_fiche">
                                            <p class="col-xs-5 label_oiseau">Nom Vern de l'oiseau :</p>
                                            <p class="col-xs-7"> {{ birdChoisi.nomVern }}</p>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                        {% if observation is defined %}
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    <h3 class="text-center">Information sur l'observation :</h3><br/>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Commentaire :</p>
                                        <p class="col-xs-7"> {{ observation.comment }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Date :</p>
                                        <p class="col-xs-7"> {{ observation.date | date("d/m/Y") }}</p>
                                    </div>
                                    <div class="englob_fiche">
                                        <p class="col-xs-5 label_oiseau">Maille :</p>
                                        <p class="col-xs-7"> {{ observation.km10Maille.getNomMaille() }}</p>
                                    </div>
                                    {% if observation.imageUrl %}
                                        <div class="englob_fiche">
                                            <p class="col-xs-5 label_oiseau">Image :</p>
                                            <p class="col-xs-7"><a id="modal-declenche">Cliquez ici</a></p>
                                        </div>
                                        <div class="modal fade" id="enlargeImageModal" tabindex="-1" role="dialog"
                                             aria-labelledby="enlargeImageModal" aria-hidden="true">
                                            <div class="modal-dialog modal-lg" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close"><span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <img src="{{ asset(observation.imageUrl) }}"
                                                             class="enlargeImageModalSource" style="width: 100%;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    {% if observation is defined %}
                    <div class="col-md-10 col-md-offset-1">
                        <div>
                            <h3 class="text-center">Information sur l'observation :</h3><br/>
                            <p>Commentaire : {{ observation.comment }}</p>
                            <p>Date : {{ observation.date | date("d/m/Y") }}</p>
                            <p>Maille : {{ observation.km10Maille.getNomMaille() }}</p>
                            {% if observation.imageUrl %}
                                <p>Image :{{ asset(observation.imageUrl) }} <img src="{{ asset(observation.imageUrl) }}" alt="{{ observation.bird.getNomVern() }}"></p>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                </div>
                <div class="col-sm-6 map_placement">
                    <div class="col-md-10 col-md-offset-2">
                        <div id="map" class="col-sm-6 pull-right"></div>
                    </div>
                    {#<div class="row">#}
                        {#<div id="btn_valid" class="text-center">#}
                            {#<a class="btn btn_form" href="{{ path('results') }}">Retour à la liste</a>#}
                        {#</div>#}
                    {#</div>#}
                </div>
            </div>

            <script type="text/javascript">

                var map;
                function initMap() {
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: {lat: {{ observation.lattitude }}, lng: {{ observation.longitude }}},
                        zoom: 8,
                        mapTypeId: 'terrain'
                    });
                    {% if birdChoisi is not empty %}
                    map.data.loadGeoJson('{{ path('fiche_json',{'id': observation.bird.id, 'obsId': observation.id}) }}');

                    map.data.setStyle({
                        fillColor: '#FE9A04',
                        fillOpacity: 0.5,
                        strokeWeight: 0
                    });

                    map.data.addListener('mouseover', function (event) {
                        map.data.revertStyle();
                        map.data.overrideStyle(event.feature, {strokeWeight: 1, strokeOpacity: 0.5});
                    });

//                    map.data.addListener('mouseover', function(event) {
//                        document.getElementById('info-box').textContent =
//                            event.feature.getProperty('name');
//                    });
                    {% endif %}
                }


            </script>
            <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHtk1Q7isnHjGK7ApFU2_V5--RdvqVUks&callback=initMap">
            </script>

        </div>
    </div>
{% endblock %}
{% block JS %}
    <script src="{{ asset('js/tooltip.js') }}"></script>
    <script src="{{ asset('js/modalImage.js') }}"></script>
{% endblock %}