{% extends 'base.html.twig' %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/consultation.css') }}">
{% endblock %}

{% block navi3 %}
    <li class="active"><a href="{{ path('results') }}">Consultation<span class="sr-only">(current)</span></a></li>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="consultation_bg">
        <br>
        <div class="col-md-12">
            <div>
                <h1 class="text-center">Consulter les données</h1>
                <div class="col-sm-6">
                    <div class="col-sm-12" id="bg_infos_consult">
                        <div class="col-md-12">
                            <h3 class="text-center">Choisissez l'oiseau pour lequel vous souhaitez obtenir des
                                informations et visualisez les zones géographiques dans lesquelles il a été observé
                                sur la carte.</h3>
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-12">
                                    {{ form_row(form.bird, {'label': 'Nom de l\'espèce :'}) }}
                                </div>
                            </div>
                            <div class="row">
                                <div id="btn_valid">
                                    <button class="btn btn_form" type="submit">Envoyer</button>
                                </div>
                        <div class="row" id="btn_valid">
                            <div>
                                <button class="btn btn_form" type="submit">Envoyer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    {% endif %}
                    {% if results is defined %}
                        <a class="btn btn-form" href="{{ path('results') }}">Effectuer une nouvelle consultation</a>
                    {% endif %}
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <div class="col-md-12">
                            <div>
                                <button class="btn btn_form" type="submit">Envoyer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    {% endif %}
                        {% if birdChoisi is defined %}
                        <a class="btn btn-form" href="{{ path('results') }}">Effectuer une nouvelle consultation</a>
                    {% endif %}
                    </div>
                            <div>
                                {% if observationsBird is not empty %}
                                    <h3 class="text-center">Observations sur l'oiseau :{% if birdChoisi %}
                                            {{ birdChoisi.nomValide }}{% endif %}</h3><br/>
                                {% endif %}
                                {% if observationsBird is not empty %} <!-- if observation -->
                                    <div class="table-responsive">
                                        <table class="table table-hover table-condensed">
                                            <thead>
                                            <tr>
                                                <th>Observation</th>
                                                <th>Date d'observation</th>
                                            </tr>
                                            </thead>
                                            {% for observation in observationsBird|slice(0, 10) %}
                                                <tr>
                                                    <td class="col-sm-8"><a class="articleTitle" href="{{ path('fiche_bird_obs',
                                                        {'id': observation.bird.id, 'idObs': observation.id}) }}">{{ observation.comment | truncate(125) }}</td>
                                                    <td class="col-sm-4 text-center">{{ observation.date | date("d/m/Y") }}</td>
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                </div>
            </div>
            <div class="col-sm-6 pull-left">
                <div class="col-sm-12">
                {% if observationsBird is empty %}
                    <div class="col-md-10 col-md-offset-2">
                        <div id="empty_map" class="col-sm-6 pull-right"></div>
                    </div>
                {% endif %}
                {% if observationsBird is not empty %}
                <div class="col-md-10 col-md-offset-2">
                    <div id="map" class="col-sm-6 pull-right"></div>
                    {#<div class="maille_info">#}
                        {#<div id="info-box" class="info-box" data-toggle="tooltip"></div>#}
                    {#</div>#}
                </div>
                    <div class="col-sm-12 bg_legend">
                        Les carrés colorés représentent les zones dans lesquelles l'espèce a été observée.<br>
                        Plus la couleur du carré est foncée plus un grand nombre d'individus y a été vu.<br>
                    </div>
                {% endif %}
            </div>
                    </div>
                </div>
        </div>

        <script type="text/javascript">

            var map;
            function initMap() {
                {% if birdChoisi is empty %}
                map = new google.maps.Map(document.getElementById('empty_map'), {
                    center: {lat: 46.227588, lng: 2.214329},
                    zoom: 6,
                    mapTypeId: 'terrain'
                });
                {% endif %}
                {% if birdChoisi is not empty %}
                map = new google.maps.Map(document.getElementById('map'), {
                    center: {lat: 46.227588, lng: 2.214329},
                    zoom: 6,
                    mapTypeId: 'terrain'
                });
                    {% if results is defined %}
                map.data.loadGeoJson('{{ path('bird', {'id':birdChoisi.id}) }}');

                map.data.setStyle({
                    fillColor: '#FE9A04',
                    fillOpacity: 0.5,
                    strokeWeight: 0
                    });

                    map.data.addListener('mouseover', function(event) {
                        map.data.revertStyle();
                        map.data.overrideStyle(event.feature, {strokeWeight: 2, strokeOpacity: 0.5});
                    });

                    map.data.addListener('mouseover', function(event) {
                        document.getElementById('info-box').textContent =
                            event.feature.getProperty('name');
                });
                map.data.addListener('mouseover', function (event) {
                    map.data.revertStyle();
                    map.data.overrideStyle(event.feature, {strokeWeight: 2, strokeOpacity: 0.5});
                });

//                map.data.addListener('mouseover', function (event) {
//                    document.getElementById('info-box').textContent =
//                        event.feature.getProperty('name');
//                });
                {% endif %}
            }


        </script>
        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHtk1Q7isnHjGK7ApFU2_V5--RdvqVUks&callback=initMap">
        </script>

    </div>
    </div>
{% endblock %}
{% block JS %}
    <script src="{{ asset('js/tooltip.js') }}"></script>
{% endblock %}