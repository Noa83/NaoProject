{% extends 'base.html.twig' %}
{% block title %}Consultation{% endblock %}

{% block stylesheet_enfant %}
    <link rel="stylesheet" href="{{ asset('css/consultation.css') }}">
{% endblock %}

{% block navi3 %}
    <li class="active"><a href="{{ path('results') }}">Consultation<span class="sr-only">(current)</span></a></li>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="consultation_bg">
        <br>
        <div class="col-md-12">
            <h1 class="text-center">Consulter les données</h1>
            <div class="colonne_recherches col-md-6 col-xs-12">
                <div class="col-md-12" id="bg_infos_consult">
                    <div class="col-md-12" id="opal_bg_consult">
                        <h3 class="text-center">Choisissez l'oiseau pour lequel vous souhaitez obtenir des
                            informations et visualisez les zones géographiques dans lesquelles il a été observé
                            sur la carte.</h3>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.birdId, {'label': 'Nom de l\'espèce :'}) }}
                            </div>
                        </div>
                            <div>
                                <button class="btn btn_form" type="submit">Envoyer</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    {#{% endif %}#}
                        {#{% if birdChoisi is defined %}#}
                        {#<a class="btn btn-form" href="{{ path('results') }}">Effectuer une nouvelle consultation</a>#}
                    {#{% endif %}#}
                        </div>
                    <div class="col-md-10 col-md-offset-1">
                        <div>
                            <h3 class="text-center">Observation sur l'oiseau :</h3><br/>
                            {% if observationsBird %} <!-- if observation -->
                                <div class="table-responsive">
                                    <table class="table table-hover table-condensed">
                                        <thead>
                                        <tr>
                                            <th>Nom de l'oiseau</th>
                                            <th>Observation</th>
                                            <th>Date d'observation</th>
                                        </tr>
                                        </thead>
                                        {% for observation in observationsBird|slice(0, 10) %}
                                            <tr>
                                                <td class="col-sm-3"><a class="articleTitle" href="{{ path('fiche_bird_obs', {'id': observation.bird.id, 'idObs': observation.id}) }}">{{ observation.bird.getNomComplet() }}</td>
                                                <td class="col-sm-8">{{ observation.comment | truncate(125) }}
                                                <td class="col-sm-1">{{ observation.date | date("d/m/Y") }}</td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-warning">Aucune observation trouvÃ©e.</div>
                            {% endif %}
                        </div>
                    </div>
                    </div>
                        {{ form_end(form) }}
                    {% endif %}
                        {% if birdChoisi is defined %}
                        <a class="btn btn-form" href="{{ path('results') }}">Effectuer une nouvelle consultation</a>
                    {% endif %}
                    </div>
                    <div class="row">
                        <div id="btn_valid">
                            <button class="btn btn_form" type="submit">Envoyer</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
                    </div>
                <div class="col-sm-6 pull-left">
                    <div class="col-md-10 col-md-offset-1">
                        <div id="map" class="col-sm-6 pull-right"></div>
                        <div id="info-box" data-toggle="tooltip" data-placement="top"> </div>
                    </div>
                </div>
            </div>

            <div class="colonne_carte col-md-6 col-xs-12">
                <div id="empty_map" class="col-md-12"></div>
            </div>

            <script type="text/javascript">
                var map;
                function initMap() {
                    map = new google.maps.Map(document.getElementById('empty_map'), {
                        center: {lat: 46.227588, lng: 2.214329},
                        zoom: 6,
                        mapTypeId: 'terrain'
                    });

                    map.data.addListener('mouseover', function(event) {
                        map.data.revertStyle();
                        map.data.overrideStyle(event.feature, {strokeWeight: 2, strokeOpacity: 0.5});
                    });

                    map.data.addListener('mouseover', function(event) {
                        document.getElementById('info-box').textContent =
                            event.feature.getProperty('name');
                });
                }
            </script>
            <script async defer
                    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHtk1Q7isnHjGK7ApFU2_V5--RdvqVUks&callback=initMap">
            </script>
        </div>
    </div>

{% endblock %}
{% block JS %}
    <script src="{{ asset('js/tooltip.js') }}"></script>
{% endblock %}
