{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/createAccountStyle.css') }}">
{% endblock %}

{% block navi2 %}
    <li class="active"><a href="{{ path('observation') }}">Observation<span class="sr-only">(current)</span></a></li>
{% endblock %}

    {% block body %}
    {#<img class="img-responsive" alt="logo_nos_amis_les_oiseaux" src="{{ asset('images/fond_landing.jpg') }}">#}
    <div class="container-fluid landing">
        <div class="container-fluid test">
            <div class="col-md-6 col-md-offset-6">
                <div class="part-right">
                    <h2 class="sous-titre">Ensemble, préservons l'environnement.</h2>
                    <p class="accroche">Aidez-nous à étudier les effets du climat, de l'urbanisation
                        et de l'agriculture sur la biodiversité.<br/>
                        Inscrivez-vous et envoyez-nous vos observations.
                    </p>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.date, {'label': 'Date de l\'observation :'}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.birds, {'label': 'Nom de l\'espèce :'}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.latLong, {'label': 'Coordonnées d\'observation (Long Lat) :', 'placeholder':'2.213624 46.229208'}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.observationMsg, {'label': 'Observations :'}) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.image, {'label': 'Joindre une image :'}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.idUser) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-md-offset-4">
                            <button class="btn" type="submit">Envoyer</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}