<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}NAO{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" href="{{ asset('/css/font-awesome-4.7.0/css/font-awesome.css') }}">
        <link rel="stylesheet" href="{{ asset('css/naostyle.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Mitr:300,400" rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/png" href="{{ asset('images/favicon-NAO.png') }}"/>
</head>
<body class="container-fluid">
<header class="row" id="nao_header">
    <div id="top_button_bar_xs" class="col-sm-12">
        <a class="btn pull-right btn-sm faceb" href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
        <a class="btn btn-sm join" href="{{ path('join') }}" role="button">Adhérer</a>
        <a class="btn btn-sm donate" href="{{ path('donate') }}" role="button">Faire un don</a>
    </div>
    <!-- Navbar -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nao-navbar"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand img-responsive">
                    <img alt="logo_nos_amis_les_oiseaux"
                         src="{{ asset('images/LogoNAO300x123.png') }}">
                </div>
            </div>
            <div class="collapse navbar-collapse navbar-right" id="nao-navbar">
                <div id="top_button_bar" class="col-sm-4 pull-right">
                    <a class="btn btn-sm donate pull-right" href="{{ path('donate') }}" role="button">Faire
                        un
                        don</a>
                    <a class="btn btn-sm join pull-right" href="{{ path('join') }}"
                       role="button">Adhérer</a>
                    <a class="btn pull-right btn-sm faceb" href="#">
                        <i class="fa fa-facebook" aria-hidden="true"></i></a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    {% block navi1 %}
                        <li><a href="{{ path('home_page') }}"><i class="fa fa-home" aria-hidden="true"></i> Accueil</a>
                        </li>{% endblock %}
                    {% block navi2 %}
                        <li><a href="{{ path('observation') }}">Observation</a></li>
                    {% endblock %}
                    {% block navi3 %}
                        <li><a href="{{ path('results') }}">Consultation</a></li>
                    {% endblock %}
                    <li>
                        <form class="navbar-form navbar-right">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Rechercher">
                            </div>
                            <button type="submit" id="btn_search" class="btn"><span class="glyphicon glyphicon-search"
                                                                                aria-hidden="true"></span></button>
                        </form>
                    </li>
                    {% block navi4 %}
                        <li><a href="#">Blog</a></li>
                    {% endblock %}
                    {% block navi5 %}
                        <li class="dropdown">
                    {% endblock %}
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true"
                               aria-expanded="false">Mon Compte<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ path('account') }}">Mon Compte</a></li>
                                    <li><a href="{{ path('logout') }}">Se Déconnecter</a></li>
                                {% else %}
                                    <li><a href="{{ path('login') }}">Se Connecter</a></li>
                                    <li><a href="{{ path('create_account') }}">Créer un compte</a></li>
                                {% endif %}
                            </ul>
                        </li>
                </ul>
            </div>
        </div>
    </nav> <!-- end navbar -->
</header>

{% block body %}{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="{{ asset('js/autocomplete.js') }}"></script>
{% endblock %}

<footer class="row footer">
    <ol class="breadcrumb  pull-right">
        <li><a href="#">Admin</a></li>
        <li><a href="{{ path('legal_notice') }}">Mentions légales</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
        <li><a href="{{ path('join') }}">Adhérer</a></li>
        <li><a href="{{ path('donate') }}">Faire un don</a></li>
    </ol>
</footer>
</body>
</html>
